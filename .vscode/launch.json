    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py with Auto Reload",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "autoReload": {
                "enable": true,
                "include": [
                    "**/*.py",
                    "**/*.pyw"
                ]
            },
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: main.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File with Auto Reload",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "autoReload": {
                "enable": true,
                "include": [
                    "**/*.py",
                    "**/*.pyw"
                ]
            },
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}